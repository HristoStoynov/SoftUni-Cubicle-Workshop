<div class="container">
  <main>
    <h1>{{this.name}}</h1>
    <img class="cube" src="{{this.imageUrl}}">
    <div class="details">
      <p><span>Description:</span> {{this.description}}</p>
      <p><span>Difficulty level:</span> {{this.difficulty}}</p>
      <a class="btn" href="/">Back</a>
      <a class="btn" href="/edit/{{this._id}}">Edit</a>
      <a class="btn" href="/delete/{{this._id}}">Delete</a>
    </div>
  </main>
</div>